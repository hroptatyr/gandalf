args "--unamed-opts"
usage " [OPTION]... [...]"
description "gandalf service"

section "Server options"
option "config" c
	"Configuration file"
	string optional typestr="FILE"
option "daemon" d
	"Detach from tty and run as daemon"
	flag off
option "pidfile" p
	"Output pid of server process into this file"
	string optional typestr="FILE"
